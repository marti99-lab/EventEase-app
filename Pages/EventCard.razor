@code {
    [Parameter]
    public string? EventName { get; set; }

    [Parameter]
    public DateTime EventDate { get; set; }

    [Parameter]
    public string? Location { get; set; }

    [Parameter]
    public int EventId { get; set; }  // New parameter to pass the event ID
}

<div class="event-card" style="border: 1px solid #ccc; padding: 10px; margin-bottom: 10px;">
    <h3>@EventName</h3>
    <p>Date: @EventDate.ToString("dd MMM yyyy")</p>
    <p>Location: @Location</p>
    <a href="/eventdetails/@EventId" style="color: blue; text-decoration: underline;">View Details</a>
</div>
